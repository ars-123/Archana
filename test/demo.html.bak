        .middle i.fa{ margin: 0 0 10px; }
        .middle h4{    margin: 0 0 8px;}
        p.added {border: 1px solid; padding: 0 0; }
p.added span {padding: 6px 10px; } 
.item{padding: 20px 0;}
.right button{background: #0faf0f;
